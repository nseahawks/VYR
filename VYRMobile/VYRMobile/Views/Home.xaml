                <!--<Grid HorizontalOptions="End"
                        Margin="0, 0, 0, 0">
                    <controls:CallMenu 
                        SelectedCommand="{Binding ItemSelectedCommand}"
                        HorizontalOptions="End" 
                        VerticalOptions="End"
                        HeightRequest="60"
                        WidthRequest="60"
                        Margin="0,0,5,10"/>
                </Grid>-->
                <Button     x:Name="CallFrancisco"
                            ImageSource="call.png" 
                            Command="{Binding StartCommand}"
                            BackgroundColor="#005EB2" 
                            BorderRadius="50"  
                            VerticalOptions="End"
                            HorizontalOptions="End" 
                            WidthRequest="60" 
                            HeightRequest="60" 
                            Margin="0,0,10,6" />
            </Grid>
        </Grid>
    </ContentPage.Content>
