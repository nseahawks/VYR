<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="VYRMobile.Home"
             Title="Home"
             IconImageSource="dashboard2.png">
    <ContentPage.Content>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Frame BackgroundColor="#005EB2" 
                           HeightRequest="25" 
                           HorizontalOptions="FillAndExpand" 
                           VerticalOptions="Start"
                           CornerRadius="0"/>
                <Label Text="Dashboard" 
                           TextColor="White" 
                           FontSize="Large"
                           FontAttributes="Bold"
                           Margin="10, 16, 0, 0"/>
            </Grid>

            <!--View del cronometro -->
            <StackLayout VerticalOptions="Start"
                     HeightRequest="100"
                                 Grid.Row="1">
                <Frame
                        x:Name="CronometroView"
                        BackgroundColor="LightGray"
                        CornerRadius="35"
                        WidthRequest="400"
                        HeightRequest="150"
                        VerticalOptions="Start"
                        HorizontalOptions="Center"
                        Opacity="25"
                        BorderColor="Gray"
                            >
                    <Label Text="Cronometro" FontSize="22" TextColor="Black" FontAttributes="Bold" HorizontalOptions="CenterAndExpand" VerticalOptions="Center"/>
                </Frame>
            </StackLayout>

            <!--Boton de pausa -->
            <StackLayout VerticalOptions="Fill"
                                 HeightRequest="50"
                                 Grid.Row="2"
                                 >
                <Button Grid.Row="2" ImageSource="pause.png" CornerRadius="20" HeightRequest="50"
                                WidthRequest="100" HorizontalOptions="Center" BackgroundColor="Aqua" BorderColor="LightBlue"/>

                <!--<Frame x:Name="InfoRuta"
                               BackgroundColor="White"
                               CornerRadius="5"
                               WidthRequest="400"
                               HeightRequest="150"
                               VerticalOptions="Fill"
                               HorizontalOptions="Center">

                            <Label Text="INFORMACION DE RUTA" TextColor="Black" HorizontalOptions="Center" VerticalOptions="Center"/>

                        </Frame> -->

            </StackLayout>

            <!--View de tareas -->
            <StackLayout
                        VerticalOptions="Fill"
                        HeightRequest="500"
                        Grid.Row="3"
                        HorizontalOptions="Center">

                <Frame x:Name="MenuTareas"
                               BackgroundColor="White"
                               CornerRadius="5"
                               WidthRequest="250"
                               HorizontalOptions="Center"
                               HeightRequest="500">
                    <Label Text="Tareas a solucionar:" />

                </Frame>

            </StackLayout>
            <!--Empezar Ronda -->
            <StackLayout
                        VerticalOptions="End"
                        HeightRequest="50"
                        Grid.Row="4">

                <Button Text="Empezar Ronda" BackgroundColor="#F6BE14" CornerRadius="25" 
                                HeightRequest="50"
                                WidthRequest="175"
                                HorizontalOptions="Center"
                                BorderColor="#9E7406"
                                BorderWidth="3"/>

            </StackLayout>
            <!--Boton de llamada -->
            <Button Grid.Row="5" Text="Call" BorderColor="DarkBlue" BorderWidth="2" 
                            FontAttributes="Bold" BackgroundColor="#008BFF" BorderRadius="50" 
                            TextColor="Black" HorizontalOptions="End" WidthRequest="60" HeightRequest="60" 
                            Margin="0,0,20,22" VerticalOptions="End"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>