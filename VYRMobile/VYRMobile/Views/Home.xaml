    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="CronoStyle" TargetType="Label">
                <Setter Property="FontFamily" Value="{StaticResource Digital7}" />
                <Setter Property="FontSize" Value="50" />
                <Setter Property="TextColor" Value="{StaticResource GrayColor}" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Start" />
            </Style>
            <Style x:Key="TabItemStyle" TargetType="tabview:SfTabItem">
                <Setter Property="SelectionColor" Value="{StaticResource BaseColor}" />
                <Setter Property="TitleFontFamily" Value="{StaticResource PoppinsBold}" />
                <Setter Property="TitleFontColor" Value="{StaticResource BlackColor}" />
                <Setter Property="TitleFontSize" Value="{StaticResource FontSize16}" />
            </Style>
            <Style x:Key="TitleStyle" TargetType="Label">
                <Setter Property="Text" Value="Chrono:" />
                <Setter Property="FontFamily" Value="{StaticResource PoppinsBold}" />
                <Setter Property="FontSize" Value="{StaticResource FontSize24}" />
                <Setter Property="TextColor" Value="{StaticResource BlackColor}" />
            </Style>
            <Style x:Key="Title2Style" TargetType="Label">
                <Setter Property="Text" Value="Tareas pendientes:" />
                <Setter Property="FontFamily" Value="{StaticResource PoppinsBold}" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="TextColor" Value="{StaticResource BlackColor}" />
            </Style>
            <Style x:Key="FrameStyle" TargetType="Frame">
                <Setter Property="HeightRequest" Value="100" />
                <Setter Property="BackgroundColor" Value="{StaticResource WhiteColor}" />
            </Style>
            <Style x:Key="ButtonStyle" TargetType="Button">
                <Setter Property="Text" Value="Lista Completa" />
                <Setter Property="FontFamily" Value="{StaticResource PoppinsRegular}" />
                <Setter Property="FontSize" Value="{StaticResource FontSize14}" />
                <Setter Property="TextColor" Value="{StaticResource BlackColor}" />
                <Setter Property="BackgroundColor" Value="{StaticResource BoneColor}"/>
                <Setter Property="HeightRequest" Value="28"/>
                <Setter Property="WidthRequest" Value="150"/>
                <Setter Property="CornerRadius" Value="4"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <Grid Grid.RowSpan="2"
              RowSpacing="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="120"/>
                <RowDefinition Height="300"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Frame Style="{StaticResource FrameStyle}"
                   Grid.Row="0">
                <Grid Grid.RowSpan="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="310"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="28"/>
                        <RowDefinition Height="55"/>
                    </Grid.RowDefinitions>
                    <Label  Grid.Row="0"
                            Grid.Column="0"
                            VerticalOptions="Start"
                            HorizontalOptions="Center"
                            Style="{StaticResource TitleStyle}"/>
                    <Grid Grid.ColumnSpan="3"
                          Grid.Row="1"
                          HorizontalOptions="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="61"/>
                            <ColumnDefinition Width="7"/>
                            <ColumnDefinition Width="61"/>
                            <ColumnDefinition Width="7"/>
                            <ColumnDefinition Width="61"/>
                            <ColumnDefinition Width="7"/>
                            <ColumnDefinition Width="58"/>
                        </Grid.ColumnDefinitions>
                        <Label  FontSize="65"
                                Grid.Column="0"
                                FontAttributes="Bold"
                                VerticalOptions="End"
                                HorizontalOptions="End"
                                Style="{StaticResource CronoStyle}"
                                Text="{Binding StopWatchHours, StringFormat='{0:D2}'}"/>
                        <Label  FontSize="65"
                                Grid.Column="1"
                                FontAttributes="Bold"
                                VerticalOptions="End"
                                HorizontalOptions="Center"
                                Style="{StaticResource CronoStyle}"
                                Text=":"/>
                        <Label  FontSize="65"
                                Grid.Column="2"
                                FontAttributes="Bold"
                                VerticalOptions="End"
                                HorizontalOptions="End"
                                Style="{StaticResource CronoStyle}"
                                Text="{Binding StopWatchMinutes, StringFormat='{0:D2}'}"/>
                        <Label  FontSize="65"
                                Grid.Column="3"
                                FontAttributes="Bold"
                                VerticalOptions="End"
                                HorizontalOptions="Center"
                                Style="{StaticResource CronoStyle}"
                                Text=":"/>
                        <Label  FontSize="65"
                                Grid.Column="4"
                                FontAttributes="Bold"
                                VerticalOptions="End"
                                HorizontalOptions="End"
                                Style="{StaticResource CronoStyle}"
                                Text="{Binding StopWatchSeconds, StringFormat='{0:D2}'}"/>
                        <Label  FontSize="65"
                                Grid.Column="5"
                                FontAttributes="Bold"
                                VerticalOptions="End"
                                HorizontalOptions="Center"
                                Style="{StaticResource CronoStyle}"
                                Text="."/>
                        <Label  FontSize="40"
                                Grid.Column="6"
                                VerticalOptions="End"
                                HorizontalOptions="Start"
                                Style="{StaticResource CronoStyle}"
                                Text="{Binding StopWatchMilliseconds}"/>
                    </Grid>
                </Grid>
            </Frame>
            <Frame HeightRequest="350"
               Grid.Row="1">
                <Grid Grid.RowSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="255"/>
                    </Grid.RowDefinitions>
                    <StackLayout>
                        <tabview:SfTabView x:Name="tabView" 
                                           VerticalOptions="FillAndExpand"
                                           VisibleHeaderCount="2" 
                                           Grid.Row="0" >
                            <tabview:SfTabView.Items>
                                <tabview:SfTabItem Title="Tareas" 
                                                   TitleFontFamily="{StaticResource PoppinsBold}"
                                                   SelectionColor="{StaticResource BaseColor}"
                                                   TitleFontSize="{StaticResource FontSize16}">
                                    <tabview:SfTabItem.Content>
                                        <ListView 
                                            ItemsSource="{Binding Tareas}"
                                            SelectionMode="None"
                                            HasUnevenRows="True"
                                            SeparatorVisibility="None">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <cells:TareaItemViewCell />
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </tabview:SfTabItem.Content>
                                </tabview:SfTabItem>
                                <tabview:SfTabItem Title="Antenas"
                                                   TitleFontFamily="{StaticResource PoppinsBold}"
                                                   SelectionColor="{StaticResource BaseColor}"
                                                   TitleFontSize="{StaticResource FontSize16}">
                                    <tabview:SfTabItem.Content>
                                        <ListView
                                            x:Name="antenasView"
                                            ItemsSource="{Binding Puntos}"
                                            SelectionMode="None"
                                            HasUnevenRows="True"
                                            SeparatorVisibility="None">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <cells:PuntoItemViewCell/>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </tabview:SfTabItem.Content>
                                </tabview:SfTabItem>
                            </tabview:SfTabView.Items>
                        </tabview:SfTabView>
                    </StackLayout>
                </Grid>
            </Frame>
            <Grid   
                Grid.Row="2"
                Grid.RowSpan="1"
                Grid.ColumnSpan="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="330"/>
                </Grid.ColumnDefinitions>
                <Button     
                    x:Name="QR"
                    FontFamily="{StaticResource PoppinsMedium}"
                    Text="Escanear qr"
                    TextColor="{StaticResource WhiteColor}"
                    CornerRadius="3"
                    BackgroundColor="{StaticResource BaseColor}"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    WidthRequest="150"
                    HeightRequest="60"/>
                <!--<Button     x:Name="QR"
                            Command="{Binding ConnectCommand}"
