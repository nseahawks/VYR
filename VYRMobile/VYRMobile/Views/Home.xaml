xmlns:picker="clr-namespace:Syncfusion.SfPicker.XForms;assembly=Syncfusion.SfPicker.XForms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             
             xmlns:tabview="clr-namespace:Syncfusion.XForms.TabView;assembly=Syncfusion.SfTabView.XForms"
             xmlns:cells="clr-namespace:VYRMobile.Views.Cells"
             xmlns:local="clr-namespace:VYRMobile.ViewModels"
             mc:Ignorable="d"
             x:Class="VYRMobile.Home"
             NavigationPage.HasNavigationBar="False"
             NavigationPage.HasBackButton="False">
    <!--<ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="outer.png"/>
    </ContentPage.ToolbarItems>-->
    <ContentPage.BindingContext>
        <local:CronoViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="CronoStyle" TargetType="Label">
                <Setter Property="Text" Value="00:00:00.0" />
                <Setter Property="FontFamily" Value="{StaticResource PoppinsMedium}" />
                <Setter Property="FontSize" Value="50" />
                <Setter Property="TextColor" Value="{StaticResource GrayColor}" />
                <Setter Property="HorizontalOptions" Value="Center" />
            </Style>
            <Style x:Key="TitleStyle" TargetType="Label">
                <Setter Property="Text" Value="Chrono:" />
                <Setter Property="FontFamily" Value="{StaticResource PoppinsBold}" />
                <Setter Property="FontSize" Value="{StaticResource FontSize24}" />
                <Setter Property="TextColor" Value="{StaticResource BlackColor}" />
            </Style>
            <Style x:Key="Title2Style" TargetType="Label">
                <Setter Property="Text" Value="Tareas pendientes:" />
                <Setter Property="FontFamily" Value="{StaticResource PoppinsBold}" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="TextColor" Value="{StaticResource BlackColor}" />
            </Style>
            <Style x:Key="ButtonStyle" TargetType="Button">
                <Setter Property="Text" Value="Lista Completa" />
                <Setter Property="FontFamily" Value="{StaticResource PoppinsRegular}" />
                <Setter Property="FontSize" Value="{StaticResource FontSize14}" />
                <Setter Property="TextColor" Value="{StaticResource BlackColor}" />
                <Setter Property="BackgroundColor" Value="{StaticResource BoneColor}"/>
                <Setter Property="HeightRequest" Value="28"/>
                <Setter Property="WidthRequest" Value="150"/>
                <Setter Property="CornerRadius" Value="4"/>

            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <Grid Grid.RowSpan="2"
          RowSpacing="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="120"/>
                <RowDefinition Height="300"/>
                <RowDefinition Height="90"/>
            </Grid.RowDefinitions>
            <Frame HeightRequest="100"
               Grid.Row="0">
                <Grid Grid.RowSpan="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="28"/>
                        <RowDefinition Height="90"/>
                    </Grid.RowDefinitions>
                    <Label  Grid.Row="0"
                            Grid.Column="0"
                            VerticalOptions="Start"
                            HorizontalOptions="Center"
                            Style="{StaticResource TitleStyle}"/>
                    <Label  Grid.Row="1"
                       Grid.Column="0"
                       VerticalOptions="Start"
                       Style="{StaticResource CronoStyle}">
                        <!--<Label.FormattedText>
                        <FormattedString>
                            <Span Text="{Binding StopWatchHours, StringFormat='{0:D2}'}"/>
                            <Span Text=":"/>
                            <Span Text="{Binding StopWatchMinutes, StringFormat='{0:D2}'}"/>
                            <Span Text=":"/>
                            <Span Text="{Binding StopWatchSeconds, StringFormat='{0:D2}'}"/>
                            <Span Text="."/>
                            <Span Text="{Binding StopWatchMilliseconds}"/>
                        </FormattedString>
                    </Label.FormattedText>-->
                    </Label>
                </Grid>
            </Frame>
            <Frame HeightRequest="350"
               Grid.Row="1">
                <Grid Grid.RowSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="215"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <StackLayout>
                        <tabview:SfTabView x:Name="tabView" VerticalOptions="FillAndExpand"
                          
                           VisibleHeaderCount="2" Grid.Row="1">
                        <tabview:SfTabView.Items>
                                <tabview:SfTabItem Title="Tareas">
                                    <tabview:SfTabItem.Content>
                                        <ListView 
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            ItemsSource="{Binding Tareas}"
                                            SelectionMode="None"
                                            HasUnevenRows="True"
                                            SeparatorVisibility="None">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <cells:TareaItemViewCell />
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </tabview:SfTabItem.Content>
                                </tabview:SfTabItem>
                                <tabview:SfTabItem Title="Antenas">
                                    <tabview:SfTabItem.Content>
                                        <ListView 
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            ItemsSource="{Binding Puntos}"
                                            SelectionMode="None"
                                            HasUnevenRows="True"
                                            SeparatorVisibility="None">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <cells:PuntoItemViewCell />
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </tabview:SfTabItem.Content>
                                </tabview:SfTabItem>
                            </tabview:SfTabView.Items>
                    </tabview:SfTabView>
                    </StackLayout>
                    
                    <!--<ListView 
                            Grid.Row="1"
                            Grid.Column="0"
                            ItemsSource="{Binding Tareas}"
                            SelectionMode="None"
                            HasUnevenRows="True"
                            SeparatorVisibility="None">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <cells:TareaItemViewCell />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>-->
                    <Button
                        Grid.Row="1"
                        Grid.Column="0"
                        x:Name="tareasButton"
                        Style="{StaticResource ButtonStyle}"
                        HorizontalOptions="Start"
                        Margin="0,0,0,0"
                        />
                </Grid>
            </Frame>
            <Frame HeightRequest="100"
               Grid.Row="2">
                <Grid   Grid.RowSpan="1"
                        Grid.ColumnSpan="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>
                    <Button 
                    Grid.Row="0"
                    Grid.Column="0"
                    x:Name="QR"
                    Command="{Binding ConnectCommand}"
                    Text="Scanear QR" 
                    TextColor="White"
                    BackgroundColor="#005EB2" 
                    CornerRadius="5" 
                    HeightRequest="15"
                    WidthRequest="175"           
                    HorizontalOptions="End"
                    
                  />
                    <Button        
                        Grid.Column="1"
                        x:Name="CallFrancisco"
                        ImageSource="call.png" 
                        BackgroundColor="#005EB2" 
                        BorderRadius="50"  
                        HorizontalOptions="End" 
                        WidthRequest="60" 
                        HeightRequest="60" 
                        Margin="0,0,5,0" 
                        VerticalOptions="End"/>
                </Grid>
            </Frame>
        </Grid>
    </ContentPage.Content>
