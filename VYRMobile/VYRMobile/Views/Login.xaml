        </OnPlatform>
    </ContentPage.Padding>-->


    <ContentPage.Content>

        <Grid BackgroundColor="#FFFFFF">
            <!--<local:GradientColorStack StartColor="Green" EndColor="Red">
                <StackLayout VerticalOptions="CenterAndExpand">

                </StackLayout>

            </local:GradientColorStack> 

            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
