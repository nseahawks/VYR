            <StackLayout VerticalOptions="CenterAndExpand">
                <Image Grid.Row="0"
                       Source="seahawks2.png"
                       HorizontalOptions="Center"
                       Margin="2,0,0,0"
                       />
                <Label Grid.Row="1" 
                       Text="Usuario" 
                       TextColor="#005EB2"
                       FontSize="Subtitle"
                       FontAttributes="Bold"
                       Margin="33,0,0,0"/>
                <Entry Grid.Row="2" 
                       FontSize="18" 
                       BackgroundColor="White" 
                       TextColor="Black" 
                       HeightRequest="50" 
                       WidthRequest="300"
                       VerticalOptions="Start" 
                       HorizontalOptions="Center"/>
                <Label Grid.Row="3"
                       Text="Contraseña" 
                       TextColor="#005EB2"
                       FontSize="Subtitle"
                       FontAttributes="Bold"
                       Margin="33,0,0,0"/>
                <Entry Grid.Row="4" 
                       FontSize="18" 
                       IsPassword="True" 
                       BackgroundColor="White" 
                       TextColor="Black"
                       HeightRequest="50" 
                       WidthRequest="300"
                       VerticalOptions="Start" 
                       HorizontalOptions="Center"/>
                <Button Grid.Row="5" 
                       BorderRadius="20"  
                       x:Name="Loginbtn" 
                       Text="Iniciar sesión" 
                       BackgroundColor="#005EB2" 
                       TextColor="White" 
                       HeightRequest="50" 
                       WidthRequest="150"
                       VerticalOptions="Start" 
                       HorizontalOptions="Center"/>
            </StackLayout>

        </Grid>
    </ContentPage.Content>
</ContentPage>